<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="155dp"
    android:layout_height="wrap_content"
    android:paddingBottom="2dp"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="-10dp">

    <ImageView
        android:id="@+id/lotImageView"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/round_corners"/>

    <TextView
        android:id="@+id/lotPriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lotImageView"
        android:layout_marginTop="10dp"
        android:gravity="bottom"
        android:textAppearance="@style/text_style_h3"
 />
    <TextView
        android:id="@+id/lotNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lotPriceTextView"
        android:layout_marginTop="5dp"
        android:gravity="bottom"
        android:textAppearance="@style/text_style_h4"
 /><TextView
        android:id="@+id/lotAuthorTextView"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lotNameTextView"
        android:layout_marginTop="4dp"
        android:gravity="bottom"
        android:textAppearance="@style/text_style_h5"
 />


</androidx.constraintlayout.widget.ConstraintLayout>