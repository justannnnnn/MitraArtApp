<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserSettingsActivity">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-85dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingBottom="20dp">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:background="@color/white"
                android:src="@drawable/ic_back_arrow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/user_settings_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="56dp"
                android:gravity="top"
                android:text="@string/settings_user_account"
                android:textAppearance="@style/text_style_h2"
                app:layout_constraintStart_toEndOf="@+id/back_button"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/user_settings_textView"
                tools:layout_editor_absoluteX="20dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/photoImageView"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/very_very_round_corners"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/ll1"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/very_very_round_corners"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageButton
                        android:id="@+id/photoImageButton"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:background="@drawable/photo" />
                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/loginTextView"
                android:layout_width="48dp"
                android:layout_height="18dp"
                android:layout_marginTop="20dp"
                android:text="@string/login"
                android:textAppearance="@style/text_style_input_hint"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl1" />

            <TextView
                android:id="@+id/loginTextViewClickable"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/not_very_round_corners_grey"
                android:gravity="center_vertical"
                android:paddingLeft="25dp"
                android:text="govnogovna"
                android:textAppearance="@style/text_style_menu"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/loginTextView" />

            <TextView
                android:id="@+id/emailTextView"
                android:layout_width="48dp"
                android:layout_height="18dp"
                android:layout_marginTop="20dp"
                android:text="@string/e_mail"
                android:textAppearance="@style/text_style_input_hint"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/loginTextViewClickable" />

            <TextView
                android:id="@+id/emailTextViewClickable"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/not_very_round_corners_grey"
                android:gravity="center_vertical"
                android:paddingLeft="25dp"
                android:text="govnogovna"
                android:textAppearance="@style/text_style_menu"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emailTextView" />

            <TextView
                android:id="@+id/id1TextView"
                android:layout_width="50dp"
                android:layout_height="18dp"
                android:layout_marginTop="20dp"
                android:text="@string/my_id"
                android:textAppearance="@style/text_style_input_hint"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/emailTextViewClickable" />

            <TextView
                android:id="@+id/id2TextView"
                android:layout_width="50dp"
                android:layout_height="18dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="20dp"
                android:text="1538"
                android:textAppearance="@style/text_style_menu"
                app:layout_constraintLeft_toRightOf="@id/id1TextView"
                app:layout_constraintTop_toBottomOf="@id/emailTextViewClickable" />

            <TextView
                android:id="@+id/passTextView"
                android:layout_width="50dp"
                android:layout_height="18dp"
                android:layout_marginTop="20dp"
                android:text="@string/password"
                android:textAppearance="@style/text_style_input_hint"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/id1TextView" />

            <TextView
                android:id="@+id/passTextViewClickable"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/not_very_round_corners_grey"
                android:gravity="center_vertical"
                android:inputType="textPassword"
                android:paddingLeft="25dp"
                android:text="govnogovna"
                android:textAppearance="@style/text_style_menu"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/passTextView" />

            <TextView
                android:id="@+id/typeTextView"
                android:layout_width="50dp"
                android:layout_height="18dp"
                android:layout_marginTop="20dp"
                android:text="@string/type"
                android:textAppearance="@style/text_style_input_hint"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/passTextViewClickable" />

            <Spinner
                android:id="@+id/typeSpinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_spinner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/typeTextView" />

            <TextView
                android:id="@+id/ecpTextView"
                android:layout_width="70dp"
                android:layout_height="18dp"
                android:layout_marginTop="20dp"
                android:text="@string/my_ecp"
                android:textAppearance="@style/text_style_input_hint"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/typeSpinner" />

            <Spinner
                android:id="@+id/ecpSpinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_spinner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ecpTextView" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/grey"
        app:menu="@menu/bottom_nav_menu"
        app:itemTextColor="@color/grey"
        app:itemActiveIndicatorStyle="@color/grey"/>

</androidx.constraintlayout.widget.ConstraintLayout>