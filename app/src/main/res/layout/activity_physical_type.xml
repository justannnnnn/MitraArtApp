<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhysicalTypeActivity">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingBottom="20dp">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:background="@color/white"
                android:src="@drawable/ic_back_arrow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/type_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="56dp"
                android:layout_marginLeft="11dp"
                android:gravity="top"
                android:text="@string/phys_type"
                android:textAppearance="@style/text_style_h2"
                app:layout_constraintStart_toEndOf="@+id/back_button"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/surnameTextView"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginTop="20dp"
                android:text="@string/your_surname"
                android:textAppearance="@style/text_style_input_hint"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/back_button" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/surname_TextInputL"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="5dp"
                android:textColorHint="@color/medium_grey"
                app:boxBackgroundColor="@color/grey"
                app:boxStrokeWidth="0dp"
                app:hintTextAppearance="@style/text_style_input_hint"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/surnameTextView">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/surname_TextInput"
                    android:textAppearance="@style/text_style_h3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:layout_marginLeft="0dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginTop="20dp"
                android:text="@string/your_name"
                android:textAppearance="@style/text_style_input_hint"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/surname_TextInputL" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/name_TextInputL"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="5dp"
                android:textColorHint="@color/medium_grey"
                app:boxBackgroundColor="@color/grey"
                app:boxStrokeWidth="0dp"
                app:hintTextAppearance="@style/text_style_input_hint"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nameTextView">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/name_TextInput"
                    android:textAppearance="@style/text_style_h3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:layout_marginLeft="0dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/patronymicTextView"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginTop="20dp"
                android:text="@string/your_patronymic"
                android:textAppearance="@style/text_style_input_hint"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/name_TextInputL" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/patronymic_TextInputL"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="5dp"
                android:textColorHint="@color/medium_grey"
                app:boxBackgroundColor="@color/grey"
                app:boxStrokeWidth="0dp"
                app:hintTextAppearance="@style/text_style_input_hint"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/patronymicTextView">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/patronymic_TextInput"
                    android:textAppearance="@style/text_style_h3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:layout_marginLeft="0dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/bdTextView"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginTop="20dp"
                android:text="@string/birthday"
                android:textAppearance="@style/text_style_input_hint"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/patronymic_TextInputL" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/bd_TextInputL"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="5dp"
                android:textColorHint="@color/medium_grey"
                app:boxBackgroundColor="@color/grey"
                app:boxStrokeWidth="0dp"
                app:hintTextAppearance="@style/text_style_input_hint"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bdTextView">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/bd_TextInput"
                    android:textAppearance="@style/text_style_h3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:layout_marginLeft="0dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/passportTextView"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginTop="20dp"
                android:text="@string/passport"
                android:textAppearance="@style/text_style_input_hint"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bd_TextInputL" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/passport_TextInputL"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="5dp"
                android:textColorHint="@color/medium_grey"
                app:boxBackgroundColor="@color/grey"
                app:boxStrokeWidth="0dp"
                app:hintTextAppearance="@style/text_style_input_hint"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/passportTextView">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/passport_TextInput"
                    android:textAppearance="@style/text_style_h3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_marginLeft="0dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/pass_dateTextView"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginTop="20dp"
                android:text="@string/passport_date"
                android:textAppearance="@style/text_style_input_hint"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/passport_TextInputL" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/pass_date_TextInputL"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="5dp"
                android:textColorHint="@color/medium_grey"
                app:boxBackgroundColor="@color/grey"
                app:boxStrokeWidth="0dp"
                app:hintTextAppearance="@style/text_style_input_hint"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pass_dateTextView">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/pass_date_TextInput"
                    android:textAppearance="@style/text_style_h3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:layout_marginLeft="0dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/who_passTextView"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginTop="20dp"
                android:text="@string/by_whom_given"
                android:textAppearance="@style/text_style_input_hint"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pass_date_TextInputL" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/who_pass_TextInputL"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="5dp"
                android:textColorHint="@color/medium_grey"
                app:boxBackgroundColor="@color/grey"
                app:boxStrokeWidth="0dp"
                app:hintTextAppearance="@style/text_style_input_hint"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/who_passTextView">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/who_pass_TextInput"
                    android:textAppearance="@style/text_style_h3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:layout_marginLeft="0dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/pass_residenceTextView"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginTop="20dp"
                android:text="@string/residence_passport"
                android:textAppearance="@style/text_style_input_hint"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/who_pass_TextInputL" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/pass_residence_TextInputL"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="5dp"
                android:textColorHint="@color/medium_grey"
                app:boxBackgroundColor="@color/grey"
                app:boxStrokeWidth="0dp"
                app:hintTextAppearance="@style/text_style_input_hint"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pass_residenceTextView">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/pass_residence_TextInput"
                    android:textAppearance="@style/text_style_h3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:layout_marginLeft="0dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/fact_residenceTextView"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginTop="20dp"
                android:text="@string/factical_residence"
                android:textAppearance="@style/text_style_input_hint"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pass_residence_TextInputL" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fact_residence_TextInputL"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="5dp"
                android:textColorHint="@color/medium_grey"
                app:boxBackgroundColor="@color/grey"
                app:boxStrokeWidth="0dp"
                app:hintTextAppearance="@style/text_style_input_hint"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fact_residenceTextView">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fact_residence_TextInput"
                    android:textAppearance="@style/text_style_h3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:layout_marginLeft="0dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/ll2"
                android:layout_width="156dp"
                android:layout_height="44dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/not_very_round_corners_purple"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fact_residence_TextInputL">

                <Button
                    android:id="@+id/continue_button"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/save"
                    android:textAppearance="@style/text_style_menu"
                    android:textColor="@color/white"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>










        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>