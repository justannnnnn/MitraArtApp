<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AccountSettingsActivity">

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:background="@color/white"
        android:src="@drawable/ic_back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/settings_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_marginLeft="11dp"
        android:gravity="top"
        android:text="@string/settings_account"
        android:textAppearance="@style/text_style_h2"
        app:layout_constraintStart_toEndOf="@+id/back_button"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/cl1"
        android:layout_height="68dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:paddingLeft="25dp"
        android:background="@drawable/round_corners_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_textView">

        <Button
            android:id="@+id/settings_user_account_button"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:gravity="bottom"
            android:text="@string/settings_user_account"
            android:textColor="@color/dark_grey"
            android:textAppearance="@style/text_style_menu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:icon="@drawable/menu_arrow"
            app:iconSize="7dp"
            app:iconGravity="end"

            android:paddingRight="12dp"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@drawable/list_divider"
            app:layout_constraintTop_toBottomOf="@id/settings_user_account_button"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/vacation_mode_button"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:gravity="bottom"
            android:text="@string/vacation_mode"
            android:textColor="@color/dark_grey"
            android:textAppearance="@style/text_style_menu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:icon="@drawable/menu_arrow"
            app:iconGravity="end"
            app:iconSize="7dp"
            android:paddingRight="12dp"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/cl2"
        android:layout_height="102dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:paddingLeft="25dp"
        android:background="@drawable/round_corners_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl1">

        <Button
            android:id="@+id/watermarks_button"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:gravity="bottom"
            android:text="@string/watermarks"
            android:textColor="@color/dark_grey"
            android:textAppearance="@style/text_style_menu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:icon="@drawable/menu_arrow"
            app:iconSize="7dp"
            app:iconGravity="end"
            android:paddingRight="12dp"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@drawable/list_divider"
            app:layout_constraintTop_toBottomOf="@id/watermarks_button"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/standart_descript_button"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginTop="34dp"
            android:gravity="bottom"
            android:text="@string/standart_description_lot"
            android:textColor="@color/dark_grey"
            android:textAppearance="@style/text_style_menu"
            app:layout_constraintTop_toTopOf="parent"
            app:icon="@drawable/menu_arrow"
            app:iconGravity="end"
            app:iconSize="7dp"
            android:paddingRight="12dp"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@drawable/list_divider"
            app:layout_constraintTop_toBottomOf="@id/standart_descript_button"
            app:layout_constraintEnd_toEndOf="parent" />
        <Button
            android:id="@+id/downloaded_docs_button"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:gravity="bottom"
            android:text="@string/downloaded_docs"
            android:textColor="@color/dark_grey"
            android:textAppearance="@style/text_style_menu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:icon="@drawable/menu_arrow"
            app:iconGravity="end"
            app:iconSize="7dp"
            android:paddingRight="12dp"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>





    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/grey"
        app:menu="@menu/bottom_nav_menu"
        app:itemTextColor="@color/grey"
        app:itemActiveIndicatorStyle="@color/grey"/>

</androidx.constraintlayout.widget.ConstraintLayout>