<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/not_very_round_corners_grey"
    android:padding = "20dp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/newEmail_TextInputL"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="4dp"
        android:hint="@string/enter_new_email"
        android:textColorHint="@color/medium_grey"
        app:boxBackgroundColor="@color/white"
        app:boxStrokeWidth="0dp"
        app:hintTextAppearance="@style/text_style_input_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/newEmail_TextInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:inputType="text"
            android:textAppearance="@style/text_style_h3" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/sending_link_textView"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="@string/sending_link_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newEmail_TextInputL"
        android:layout_marginTop="20dp"
        android:textAppearance="@style/text_style_h5"/>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="156dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/not_very_round_corners_purple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sending_link_textView">

        <Button
            android:id="@+id/send_link_button"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/send_link"
            android:textAppearance="@style/text_style_menu"
            android:textColor="@color/white"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>