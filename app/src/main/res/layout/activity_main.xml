<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">
    <androidx.core.widget.NestedScrollView
        android:layout_marginBottom="65dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <ImageButton
                android:id="@+id/notification_imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:padding="10dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="20dp"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/main_searchView"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_notification" />

            <android.widget.SearchView
                android:id="@+id/main_searchView"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/search_background"
                android:paddingTop="6dp"
                android:paddingBottom="7dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:searchIcon="@drawable/ic_search"
                app:layout_constraintEnd_toStartOf="@+id/notification_imageButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/carousel_LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:layout_constraintTop_toBottomOf="@+id/main_searchView">

                <org.imaginativeworld.whynotimagecarousel.ImageCarousel
                    android:id="@+id/carousel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corners"
                    app:autoPlay="true"
                    app:autoPlayDelay="3000"
                    app:carouselType="SHOWCASE"
                    app:imageScaleType="centerCrop"
                    app:showCaption="false"
                    app:showNavigationButtons="false" />
            </LinearLayout>

            <TextView
                android:id="@+id/promolots_textView"
                android:layout_width="118dp"
                android:layout_height="23dp"
                android:layout_marginTop="30dp"
                android:gravity="bottom"
                android:text="@string/promo_lots"
                android:layout_marginLeft="20dp"
                android:textAppearance="@style/text_style_h2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/carousel_LinearLayout" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/promolots_textView">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/promolots1_RecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll1">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/promolots2_RecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            </LinearLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/grey"
        app:menu="@menu/bottom_nav_menu"
        app:itemTextColor="@color/grey"
        app:itemActiveIndicatorStyle="@color/grey"/>
</androidx.constraintlayout.widget.ConstraintLayout>



