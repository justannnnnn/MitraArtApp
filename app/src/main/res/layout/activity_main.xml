<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="20dp"
        tools:context=".MainActivity">

        <ImageButton
            android:id="@+id/notification_imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:padding="10dp"
            android:layout_marginTop="-4dp"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/main_searchView"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_notification" />

        <android.widget.SearchView
            android:id="@+id/main_searchView"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/search_background"
            android:paddingTop="6dp"
            android:paddingBottom="7dp"
            android:searchIcon="@drawable/ic_search"
            app:layout_constraintEnd_toStartOf="@+id/notification_imageButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/carousel_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/main_searchView">

            <org.imaginativeworld.whynotimagecarousel.ImageCarousel
                android:id="@+id/carousel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_corners"
                app:autoPlay="true"
                app:autoPlayDelay="3000"
                app:carouselType="SHOWCASE"
                app:imageScaleType="centerCrop"
                app:showCaption="false"
                app:showNavigationButtons="false" />
        </LinearLayout>

        <TextView
            android:id="@+id/promolots_textView"
            android:layout_width="118dp"
            android:layout_height="23dp"
            android:layout_marginTop="30dp"
            android:gravity="bottom"
            android:text="@string/promo_lots"
            android:textAppearance="@style/text_style_h2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/carousel_LinearLayout" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/promolots_textView">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/promolots_RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>



