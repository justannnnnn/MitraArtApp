<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePasswordActivity"
    android:padding="20dp">

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@color/white"
        android:src="@drawable/ic_back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/change_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="11dp"
        android:gravity="top"
        android:text="@string/password_change"
        android:textAppearance="@style/text_style_h2"
        app:layout_constraintStart_toEndOf="@+id/back_button"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/oldPasswordTextView"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginTop="20dp"
        android:text="@string/enter_old_password"
        android:textAppearance="@style/text_style_input_hint"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/change_textView" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/oldPass_TextInputL"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        android:textColorHint="@color/medium_grey"
        app:boxBackgroundColor="@color/grey"
        app:boxStrokeWidth="0dp"
        app:hintTextAppearance="@style/text_style_input_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/oldPasswordTextView">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/oldPass_TextInput"
            android:textAppearance="@style/text_style_h3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_marginLeft="0dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/newPasswordTextView"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginTop="20dp"
        android:text="@string/enter_new_password"
        android:textAppearance="@style/text_style_input_hint"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/oldPass_TextInputL" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/newPass_TextInputL"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        android:textColorHint="@color/medium_grey"
        app:boxBackgroundColor="@color/grey"
        app:boxStrokeWidth="0dp"
        app:hintTextAppearance="@style/text_style_input_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newPasswordTextView">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/newPass_TextInput"
            android:textAppearance="@style/text_style_h3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_marginLeft="0dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/rep_newPasswordTextView"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginTop="20dp"
        android:text="@string/repeat_new_password"
        android:textAppearance="@style/text_style_input_hint"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/newPass_TextInputL" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/rep_newPass_TextInputL"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        android:textColorHint="@color/medium_grey"
        app:boxBackgroundColor="@color/grey"
        app:boxStrokeWidth="0dp"
        app:hintTextAppearance="@style/text_style_input_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rep_newPasswordTextView">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/rep_newPass_TextInput"
            android:textAppearance="@style/text_style_h3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_marginLeft="0dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="156dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/not_very_round_corners_purple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rep_newPass_TextInputL">

        <Button
            android:id="@+id/save_button"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/save"
            android:textAppearance="@style/text_style_menu"
            android:textColor="@color/white"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>